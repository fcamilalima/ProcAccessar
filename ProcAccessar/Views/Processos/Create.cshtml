@model ProcAccessar.Models.Processo

@{
    ViewData["Title"] = "Create";
}

<h1>Criar Processo</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="criarProcesso">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                <div class="codigo">
                    <label asp-for="Codigo" class="control-label"></label>
                    <input asp-for="Codigo" class="form-control" />
                    <span asp-validation-for="Codigo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="titulo">
                    <label asp-for="Titulo" class="control-label"></label>
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="descricao">
                    <div class="descricao">
                        <label asp-for="Descricao" class="control-label"></label>
                        <input asp-for="Descricao" class="form-control" />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="data">
                    <label asp-for="DataCriacao" class="control-label"></label>
                    <input asp-for="DataCriacao" class="form-control" />
                    <span asp-validation-for="DataCriacao" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="categoriaId">
                    <label asp-for="CategoriaId" class="control-label"></label>
                    <input asp-for="CategoriaId" class="form-control" />
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>
            </div>
            <hr />
                <div class="form-group">
                    <input type="submit" value="Salvar Processo" class="btn btn-primary" />
                </div>
            </div>

        </form>
    </div>
</div>

<div class="voltar">
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}




