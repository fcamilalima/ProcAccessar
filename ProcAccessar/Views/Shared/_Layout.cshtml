<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProcAccessar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" src="~/css/create_estilo.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProcAccessar.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ProcAccessar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Processos" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Processos" asp-action="Create">Novo Processo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Processos" asp-action="Search">Pesquisa</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- Footer -->
    <footer class="text-center text-lg-start bg-light text-muted">

        <!-- Section: Links  -->
        <section class="">
            <div class="container text-center text-md-start mt-5">
                <!-- Grid row -->
                <div class="row">
                    <!-- Grid column -->
                    <div class="col-md-4 col-lg-4 col-xl-4">
                        <!-- Content -->
                        <img src="~/images/logo_mp_png_footer.png" />
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-4 col-lg-4 col-xl-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            Endereço
                        </h6>
                        <p>
                            Ministério Público do Estado do Ceará<br/>
                        Procuradoria Geral de Justiça<br/>
                        Sede Cambeba (Gabinete PGJ, Procuradorias de Justiça)<br/>
                        Av. Gen. Afonso Albuquerque Lima, 130 - Cambeba<br/>
                        CEP: 60.822-325 - Fortaleza, Ceará. Brasil<br/>
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-4 col-lg-4 col-xl-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            Endereço
                        </h6>
                        <p>
                            Ministério Público do Estado do Ceará<br />
                            Procuradoria Geral de Justiça<br />
                            Setores Administrativos<br />
                            Rua Assunção, 1100 - José Bonifácio<br />
                            CEP: 60050-011 - Fortaleza, Ceará. Brasil<br />
                        </p>
                    </div>

                </div>
                <!-- Grid row -->
            </div>
        </section>
        <!-- Section: Links  -->
        <!-- Copyright -->
        <div class="text-center p-4" style="background-color: rgba(0, 0, 0, 0.05);">
            © 2021 Copyright:
            <a class="text-reset fw-bold" href="http://www.mpce.mp.br">MP-CE</a> - 
            <a asp-area="" asp-controller="Processos" asp-action="Index">Home</a>
        </div>
        <!-- Copyright -->
    </footer>
  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
